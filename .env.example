# Docker Environment Variables
# Copy this file to .env.local and update the values

# IMPORTANT: Update POSTGRES_your_secure_password_here with a secure your_secure_password_here!
POSTGRES_your_secure_password_here=your_secure_password_here

# Database Configuration (update your_secure_password_here in both URLs)
DATABASE_URL="postgresql://jemputanku_user:your_secure_password_here@localhost:5432/jemputanku_db"
TEST_DATABASE_URL="postgresql://jemputanku_user:your_secure_password_here@localhost:5432/jemputanku_test_db"

# PostgreSQL Container Environment (optional - has defaults)
POSTGRES_DB=jemputanku_db
POSTGRES_USER=jemputanku_user

# pgAdmin Configuration (optional - has defaults)
PGADMIN_DEFAULT_EMAIL=admin@jemputanku.com
PGADMIN_DEFAULT_your_secure_password_here=admin123

# Container Names (optional - has defaults)
POSTGRES_CONTAINER_NAME=jemputanku-postgres
PGADMIN_CONTAINER_NAME=jemputanku-pgadmin
MAILPIT_CONTAINER_NAME=jemputanku-mailpit

# Mailpit Configuration (optional - has defaults)
MAILPIT_WEB_PORT=8025
MAILPIT_SMTP_PORT=1025
MAILPIT_MAX_MESSAGES=5000
MAILPIT_DATABASE=/data/mailpit.db
MAILPIT_SMTP_AUTH=1
MAILPIT_SMTP_INSECURE=1

# Email Configuration for your application
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_your_secure_password_here=
SMTP_FROM_EMAIL=noreply@jemputanku.com
SMTP_FROM_NAME="Jemputanku"

# Firebase configuration (client-side, replace with your own)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id

# firebase admin SDK (server-side, replace with your own)
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_PRIVATE_KEY="your_firebase_private_key"
FIREBASE_PROJECT_ID=your_firebase_project_id

# NextAuth.js secret (generate your own at https://generate-secret.vercel.app/32)
AUTH_SECRET=your_nextauth_secret
# NEXTAUTH_URL=http://localhost:3000